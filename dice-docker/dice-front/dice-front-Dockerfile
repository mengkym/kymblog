FROM node:13.12.0

LABEL MAINTAINER="tpxcer@outlook.com"

# RUN npm config set registry https://registry.npm.taobao.org

ENV HOST 0.0.0.0
ENV NODE_ENV=production

WORKDIR /app

COPY ./dice-front .
COPY ./dice-docker/dice-util/entrypoint.sh .
COPY ./dice-docker/dice-front/sources.list /etc/apt/sources.list

RUN npm install
RUN npm run build
RUN apt-get update
RUN apt-get -y install netcat

EXPOSE 3000

# CMD ["npm","run","start"]
